<h2>Safety Check Harvest Time</h2>
<br/>
<main class="container">
  <section class="row">
    <div class="col-6 push-1">
    <h3>Clients</h3>
    		<select name="client">
				<% @clients.each do |client| %>
						<option value="<%= client['id'] %>"><%= client['name'] %></option>
				<% end %>
			</select>
    </div>
    
    <div class="col-6 push-6">
    <h3>Tasks</h3>
    		<select name="task">
				<% @tasks.each do |task| %>
						<option value="<%= task['id'] %>"><%= task['name'] %></option>
				<% end %>
			</select>
    </div>
    <h3>Start Date</h3>
    		<select name="start_month">
    			<% ['January', 'February', 'March', 'April', 'May','June','July','August','September','October', 'November', 'December'].each_with_index do |month, i| %>
					<option value="<%= i + 1 %>"><%= month %></option>	
				<% end %>
			</select>
			<select name="start_day">
				<% 1.upto(31) do |day| %>
					<option value="<%= day %>"><%= day %></option>	
				<% end %>
			</select>
			<select name="start_year">
				<% ['2013', '2014', '2015'].each_with_index do |year, i| %>
					<option value="<%= i + 1 %>"><%= year %></option>	
				<% end %>
			</select>
    </div>
    <h3>End Date</h3>
    <select name="end_month">
    			<% ['January', 'February', 'March', 'April', 'May','June','July','August','September','October', 'November', 'December'].each_with_index do |month, i| %>
					<option value="<%= i + 1 %>"><%= month %></option>	
				<% end %>
			</select>
			<select name="end_day">
				<% 1.upto(31) do |day| %>
					<option value="<%= day %>"><%= day %></option>	
				<% end %>
			</select>
			<select name="end_year">
				<% ['2013', '2014', '2015'].each_with_index do |year, i| %>
					<option value="<%= i + 1 %>"><%= year %></option>	
				<% end %>
			</select>
    		
    </div>
  </section>
</main>
